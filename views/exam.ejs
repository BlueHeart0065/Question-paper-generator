<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../exam.css">
    <title>Exam</title>
</head>
<body>
    <div class="topBar">
        <p class="header">QuestionWizz</p>
        <a href="/" style="margin-left: 50vw;"><p>Home</p></a>
        <a href="/login"><p>Login</p></a>
        <a href="/signup"><p>Signup</p></a>
    </div>

    <div class="sideBar">

        <div class="boxes">
            <% questions.forEach((question) => { %>
                <div class="box">
                </div>
            <% }) %>
        </div>
    </div>

    <% questions.forEach((question) => { %>
        <div class="question">
            <p class="question_text">
                Q] <%= question.question_text %>
            </p>
            <form action="">
                <input type="radio" name="q1" id="q1" value="<%= question.option_1 %>"> <%= question.option_1 %> <br>
                <input type="radio" name="q2" id="q2" value="<%= question.option_2 %>"> <%= question.option_2 %><br>
                <input type="radio" name="q3" id="q3" value="<%= question.option_3 %>"> <%= question.option_3 %><br>
                <input type="radio" name="q4" id="q4" value="<%= question.option_4 %>"> <%= question.option_4 %>
            </form>
        </div>
    <% }) %>
</body>
</html>